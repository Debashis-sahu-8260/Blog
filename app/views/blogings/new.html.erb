<!DOCTYPE html>
<html>
<head>
  <!-- Include CSS stylesheets and meta tags -->
</head>
<body>
  <header>
    <!-- Navigation links -->
  </header>

  <main>
    <div class="container">
      <h1>Create New Post</h1>

      <%= form_with(model: @bloging) do |form| %>
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title %>
        </div>

        <div class="form-group">
          <%= form.label :content %>
          <%= form.text_area :content %>
        </div>

        <div class="form-actions">
          <%= form.submit 'Create Post' %>
        </div>
      <% end %>

      <div class="back-link">
        <%= link_to 'Back to Posts', blogings_path %>
      </div>
    </div>
  </main>

  <footer>
    <!-- Footer content -->
  </footer>
</body>
</html>
