     <h2><% link_to post.title,post_path(post) %></h2>
     <%= form_for(post, :html =>{:method => :delete, :remote => true, data: {confirm: "Are you sure?"} }) do |post| %>
     <%= f.submit :value => "Delete" %>
     <% end %>
     </li>

   </ul>

    
</body>
</html>

